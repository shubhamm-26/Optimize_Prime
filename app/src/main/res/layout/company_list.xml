<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/Companies"
        tools:cardElevation="5dp"
        tools:cardCornerRadius="16dp"
        tools:cardUseCompatPadding="true"
        android:backgroundTint="@color/trans"
        android:outlineSpotShadowColor="@color/trans"
        android:outlineAmbientShadowColor="@color/trans"
        >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5.5">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/img1"
                android:layout_weight="4"
                android:src="@drawable/adobe"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1.5"
                android:background="@drawable/box6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:textColor="@color/Black"
                        android:id="@+id/comp_name"
                        android:layout_marginLeft="10dp"/>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="temp"
                        android:textSize="12sp"
                        android:textColor="@color/grey_font"
                        android:id="@+id/po"
                        android:maxLines="0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textSize="15sp"
                        android:textColor="#34deeb"
                        android:textAlignment="center"
                        android:id="@+id/post"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/apply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=" Apply "
                android:background="@drawable/box4"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                />


        </LinearLayout>
</FrameLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>